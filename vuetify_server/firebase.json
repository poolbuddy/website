{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "port": 3000
  },
  "database": {
    "rules": "database.rules.json"
  },
  "ui": {
    "enabled": true
  },
  "functions": {
    "source": "functions"
  },
  "singleProjectMode": true
}